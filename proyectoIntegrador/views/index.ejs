<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<body>
	<!-- Header -->
	<% if (userLogged) { %>
    <%- include('./partials/headerLogueado', { data: { usuario: userLogged } }) %>
  	<% } else { %>
    <%- include('./partials/header') %>
  	<% } %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="" alt="">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
				
			</div>
			<!-- Show the "ultimos" products -->
			<%  for (let i=0; i<data.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detalle">
							<figure class="product-box_image">
								<img src="<%= data.productos[i].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= data.productos[i].nombre %></h2>
								<p><%= data.productos[i].descripcion %></p>
								<p>Comentarios: 2</p>
							</article>
						</a>
					</section>
				</div>
			
			<% } %>
			
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>
